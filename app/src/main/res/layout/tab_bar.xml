<?xml version="1.0" encoding="UTF-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        style="@style/horizontal_line_color_style"
        android:layout_gravity="top" />

    <LinearLayout
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_home"
            style="@style/tab_bar_text_style"
            android:drawableTop="@drawable/selector_tab_home"
            android:text="@string/tab_home" />

        <TextView
            android:id="@+id/tab_find"
            style="@style/tab_bar_text_style"
            android:drawableTop="@drawable/selector_tab_find"
            android:text="@string/discover" />

        <ImageView
            android:id="@+id/iv_release"
            style="@style/tab_bar_text_style"
            android:layout_height="match_parent"
            android:contentDescription="@string/realese"
            android:layout_marginBottom="@dimen/four_dp"
            android:src="@drawable/tab_release" />

        <TextView
            android:id="@+id/tab_msg"
            style="@style/tab_bar_text_style"
            android:drawableTop="@drawable/selector_tab_msg"
            android:text="@string/message" />

        <TextView
            android:id="@+id/tab_me"
            style="@style/tab_bar_text_style"
            android:drawableTop="@drawable/selector_tab_me"
            android:text="@string/me" />
    </LinearLayout>
</merge>

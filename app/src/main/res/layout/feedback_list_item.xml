<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg_selector"
    android:orientation="vertical"
    android:paddingTop="@dimen/eight_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginRight="@dimen/fifteen_dp">

        <TextView
            android:id="@+id/user_feedback_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:textColor="@color/light_text_color"
            android:textSize="@dimen/_13sp" />

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:maxLines="1"
            android:text="@string/me"
            android:textColor="@color/light_text_color"
            android:textSize="@dimen/_15sp" />

        <TextView
            android:id="@+id/user_feedback_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/user_name_tv"
            android:layout_marginTop="@dimen/six_dp"
            android:lineSpacingExtra="@dimen/six_dp"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/fourteen_dp" />

        <ImageView
            android:id="@+id/iv_agree"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/user_feedback_time_tv"
            android:layout_marginTop="@dimen/six_dp"
            android:lineSpacingExtra="@dimen/six_dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/add_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/five_dp"
        android:visibility="gone" />

    <View
        style="@style/horizontal_line_color_style"
        android:layout_marginTop="@dimen/eight_dp" />
</LinearLayout>
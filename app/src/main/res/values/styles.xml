<resources>


    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themecolor</item>
        <item name="colorPrimaryDark">@color/themecolorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/menushow</item>
        <item name="android:windowExitAnimation">@anim/menuhide</item>
    </style>

    <style name="horizontal_line_color_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/half_px</item>
        <item name="android:background">@color/gray_line_color_primary</item>
    </style>

    <style name="tab_bar_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/tab_bar_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/one_dp</item>
    </style>

    <style name="refresh_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="vertical_line_color_style">
        <item name="android:layout_width">@dimen/half_px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_line_color_primary</item>
    </style>

    <style name="primary_btn_style">
        <item name="android:layout_marginLeft">@dimen/page_margin_left</item>
        <item name="android:layout_marginRight">@dimen/page_margin_left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/row_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_login_bg</item>
        <item name="android:textColor">@color/login_btn_text_color</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:text">@string/ok</item>
        <item name="android:enabled">false</item>
    </style>

    <!--输入框-->
    <style name="input_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/inputbox_height</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/five_dp</item>
        <item name="android:ems">12</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <!-- 对话框样式 -->
    <style name="dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <declare-styleable name="PhoneNumEditText">
        <attr name="type" format="integer" />
    </declare-styleable>

</resources>

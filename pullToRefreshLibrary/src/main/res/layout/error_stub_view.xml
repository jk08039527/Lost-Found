<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/error_view"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/state_white"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/load_error_iv_height"
        android:layout_height="@dimen/load_error_iv_height"
        android:layout_marginBottom="@dimen/load_error_view_margin_12"
        android:src="@drawable/wifi_fail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/load_error_view_margin_8"
        android:gravity="center"
        android:text="@string/data_load_failed"
        android:textColor="@color/state_text_color"
        android:textSize="@dimen/load_error_view_text_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/check_network_retry"
        android:textColor="@color/state_text_color"
        android:textSize="@dimen/load_error_view_text_size"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/load_error_view_line_margin"
        android:background="@drawable/line"/>

    <TextView
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/load_error_view_line_margin"
        android:text="@string/load_again"
        android:textColor="@drawable/load_error_view_refresh_color"
        android:textSize="@dimen/_17sp"/>
</LinearLayout>
